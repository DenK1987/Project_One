<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_width">@dimen/dp_263</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/public_sans_medium</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/dp_5</item>
        <item name="android:stateListAnimator">@drawable/animation_text</item>
        <item name="android:fontFamily">@font/public_sans</item>
    </style>

    <style name="NameApp">
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:text">@string/spiice</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
    </style>

    <style name="CustomToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/text_input_layout</item>
        <item name="android:fontFamily">@font/red_hat_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonProfile">
        <item name="android:textSize">@dimen/sp_16</item>
